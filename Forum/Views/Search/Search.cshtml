@model IEnumerable<Forum.Models.ThemeViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
</head>
<body>
    <div>
        @if (Model.Count() != 0)
        {
       <ul>
            @foreach (var item in Model)
            {
                <li> @Html.ActionLink(item.Name, "Details", new { controller = "Theme", id = item.Id })</li>
            }
        </ul>
        
        }else
        {  
          <h2>Данный запрос не дал результатов</h2>
        }
        
    </div>
</body>
</html>
