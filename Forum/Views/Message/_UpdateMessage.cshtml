@model Forum.Models.MessageViewModel
@{
    Layout = null;
}

<div id="editMessage_@ViewBag.MessageId" style="display:none">
    @using (Ajax.BeginForm("UpdateMessage", "Message", new { messageId = ViewBag.MessageId, themeId =ViewBag.themeId }, new AjaxOptions { OnSuccess = "UpdateMessageAjax", HttpMethod = "Post", UpdateTargetId = "messagesOfTheme" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-error" })

        @Html.TextAreaFor(model => model.Content, new { @id = "textEditMessage_" + ViewBag.MessageId, @class = "text-area-size-edit-message" })  
        <br/>     
        <input type="submit" class="btn btn-success" value="Ок" />
    }
</div>