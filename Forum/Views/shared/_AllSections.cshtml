@model IEnumerable<Forum.Models.SectionViewModel>

<div>
@if(Model.Count()!= 0)
        {
    <table class="table table-hover myContainer">
        <thead>
            <tr>
                <th width="60%"></th>
            </tr>
        </thead>
        
        @foreach (var item in Model)
        {
            <tr>
                <td width="70%">
                    @Html.ActionLink(item.Name, "ThemesOfSection", new { controller = "Theme", sectionId = item.Id }, new { @class = "text-strong" })
                    @Html.Action("ThemeOfSection", new { controller = "Theme", sectionId = item.Id })
                </td>
                <td>
                    @item.DateAdded
                </td>
            </tr>
        }
        
    </table>
}
else { <h2>На форуме пока нет разделов</h2>}
</div>


